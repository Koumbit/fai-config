# Disks: 2x 20GB (TEST)
# Configuration: RAID1+CRYPTO+LVM

disk_config disk1 disklabel:msdos bootable:1 fstabkey:uuid
primary -      1G      -     -
primary -      10G-      -     -
#primary -      2G-     -     -

disk_config disk2 sameas:disk1

disk_config raid
raid1   /boot  disk1.1,disk2.1 ext2 rw,noatime
raid1   -      disk1.2,disk2.2 -    -

disk_config cryptsetup
luks - /dev/md1 - -

disk_config lvm
vg Base md1
Base-Swap   swap   1G    swap sw
Base-Root   /      1G   ext4 rw,noatime
Base-Home   /home  2G-  ext4 rw,noatime
