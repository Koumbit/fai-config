# Disks: 2x 20GB (TEST)
# Configuration: RAID1+CRYPTO+LVM

disk_config disk1 disklabel:msdos bootable:1 fstabkey:uuid
primary -      1G      -     -
primary -      15G      -     -
primary -      2G-     -     -

disk_config disk2 sameas:disk1

disk_config raid
raid1   /boot  disk1.1,disk2.1 ext2 rw,noatime
raid1   -      disk1.2,disk2.2 -    -
raid1   -      disk1.3,disk2.3 -    -

disk_config cryptsetup
luks:"secret" - /dev/md1 - -
luks:"secret" - /dev/md2 - -

disk_config lvm
vg root md1
root-swap   swap   1G    swap sw
root-slash   /      13G   ext4 rw,noatime
vg data md2
